<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
  <div class="field">
    <%= f.label :email %>
	
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, "Password" %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

	<div class="field">
    <%= f.label :firstname %>
    <div class="controls">
      <%= f.text_field :firstname %>
    </div>
  </div>

	<div class="field">
    <%= f.label :lastname %>
    <div class="controls">
      <%= f.text_field :lastname %>
    </div>
  </div>
	<div class="field">
    <%= f.label :usertype_id %>
    <div class="controls">
      <%= f.collection_select :usertype_id,Uesertype.all,:id,:name %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
